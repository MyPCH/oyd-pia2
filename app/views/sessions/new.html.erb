<% provide(:title, t('dialog.login')) %>
<h1><%= t('dialog.login') %></h1>

<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <% flash.each do |message_type, message| %>
        <div class="alert alert-<%= message_type %>"><%= message %></div>
    <% end %>
    <%= form_with url: login_path do |form| %>

      <%= form.label :email %>
      <%= form.email_field :email, class: 'form-control' %>

      <%= form.label :password %>
      <%= form.password_field :password, class: 'form-control' %>

      <%= form.button t('dialog.login'), class: "btn btn-primary btn-lg btn-block",
				data: { disable_with: "<i class='fa fa-spinner fa-spin'></i> " + t('dialog.login') } %>
    <% end %>

    <p><%= t('dialog.newUser') %> <%= link_to t('dialog.signUp'), new_path %></p>
  </div>
</div>