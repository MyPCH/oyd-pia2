<% provide(:title, t('requestDataVault.title')) %>
<div class="row">
	<div class="col-md-4 col-md-offset-1 col-md-push-7">
		<div class="panel panel-default" style="margin-top: 40px;">
		  	<div class="panel-heading">
		    	<h3 class="panel-title"><%= t('requestDataVault.title') %></h3>
		 	</div>
		  	<div class="panel-body">
				<% flash.each do |message_type, message| %>
					<div class="alert alert-<%= message_type %>"><%= message %></div>
				<% end %>
		  		<%= form_with url: new_path, role: "form" do |form| %>
                    <fieldset>
                    	<div class="form-group"><%= t('dialog.request_account') %></div>
			    	  	<div class="form-group">
			    	  		<%= form.text_field :name, class: "form-control", placeholder: t('requestDataVault.yourName') %>
			    		</div>
			    	  	<div class="form-group">
			    	  		<%= form.email_field :email, class: "form-control", placeholder: t('requestDataVault.yourEmail') %>
			    		</div>
			    	  	<!--<div class="form-group">
			    	  		<%= form.text_field :access_code, class: "form-control", placeholder: t('requestDataVault.accessCode') %>
			    		</div> -->
						<%= form.button t('dialog.submitBtn'), 
							class: "btn btn-success btn-lg btn-block",
							data: { disable_with: "<i class='fa fa-spinner fa-spin'></i> " + t('dialog.submitBtn') } %>
			    	</fieldset>
		      	<% end %>
		    </div>
		</div>
		<div style="margin: -10px auto 60px; display: table;">
			<%= t('dialog.account_exist') %> <%= link_to t('dialog.account_exist_link'), login_path %>
		</div>
	</div>
	<div class="col-md-7 col-md-pull-5">
		<h3 style="font-weight: 700; color: #666666;"><%= t('start.header') %></h3>
		<h3 style="line-height: 1.7em; color: #666666;"><%= t('start.text') %></h3>
		<%= image_tag("oyd-picture_" + I18n.locale.to_s + ".png",  class: "img-responsive", alt: "OwnYourData", style: "padding:4%;") %>
	</div>
</div>
